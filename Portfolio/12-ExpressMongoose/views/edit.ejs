<%- include("partials/header"); -%>

<div class="container">
    <header>
        <img src="/images/StarLion.png" alt="lion brewery" />
        <h1>Edit Driver Information</h1>
    </header>

    <body>
        <form action="/drivers/edit/<%= driver._id %>" method="post" class="driver-form">
            <h2>Driver Information</h2>
            
            <div class="form-group">
                <input type="text" name="num" id="num" placeholder="Number" value="<%= driver.num %>" />
                <input type="text" name="code" id="code" placeholder="Code" value="<%= driver.code %>" />
                <input type="text" name="name" id="name" placeholder="Name" value="<%= driver.forename %>" />
                <input type="text" name="lname" id="lname" placeholder="Last name" value="<%= driver.surname %>" />
            </div>
            
            <div class="form-group">
                <label for="dob">Date of birth: </label>
                <input type="date" name="dob" id="dob" value="<%= driver.dob.toISOString().split('T')[0] %>" />
            </div>

            <div class="form-group">
                <label for="url">Biography URL: </label>
                <input type="url" name="url" id="url" value="<%= driver.url %>" placeholder="https://example.com" />
            </div>
            
            <div class="form-group">
                <label for="nationality">Nationality: </label>
                <select name="nationality" id="nationality">
                    <% countries.forEach(country => { %>
                        <option value="<%= country.nationality %>" <%= country.nationality === driver.nationality ? "selected" : "" %>><%= country.label %></option>
                    <% }) %>
                </select>
            </div>            
            
            <div class="form-group">
                <label for="team">Team: </label>
                <select name="team" id="team">
                    <% teams.forEach(team => { %>
                        <option value="<%= team.name %>" <%= driver.team && team.name === driver.team.name ? "selected" : "" %>><%= team.name %></option>
                    <% }) %>
                </select>
            </div>

            <div class="form-group">
                <button type="submit">Update Driver</button>
            </div>
        </form>
    </body>
</div>

<%- include("partials/footer"); -%>
